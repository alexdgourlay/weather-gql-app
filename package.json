{
  "private": true,
  "name": "weather-gql-app",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "preact build --no-prerender",    
    "postinstall": "preact build --no-prerender",    
    "serve": "sirv build --port 8080 --cors --single",
    "start": "preact watch",
    "lint": "eslint src",
    "test": "jest",
    "list": "ls",
    "codegen:schema": "npx apollo client:download-schema --endpoint=https://graphql-weather-api.herokuapp.com/",
    "codegen:generate": "npx apollo client:codegen --localSchemaFile=schema.json --includes=src/**/*.tsx --target=typescript"
  },
  "engines": {
    "node": "13.7.0"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "devDependencies": {
    "@types/react": "^17.0.15",
    "@types/styled-components": "^5.1.9",
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "eslint": "^6.0.1",
    "eslint-config-preact": "^1.1.0",
    "jest": "^24.9.0",
    "jest-preset-preact": "^1.0.0",
    "preact-cli": "^3.0.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "sirv-cli": "1.0.3",
    "@apollo/client": "^3.3.15",
    "case": "^1.6.3",
    "graphql": "^15.5.0",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1",
    "styled-components": "^5.2.3"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
